
# 2. Python Auth Server
FROM python:3.12-slim

WORKDIR /app

# Install system dependencies for cryptography
RUN apt-get update && apt-get install -y gcc libffi-dev libssl-dev && rm -rf /var/lib/apt/lists/*

# Install python dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy source code
COPY app.py .
COPY jwt_generator.py .

# We assume keys are mounted at runtime
# CMD will simply run the server
CMD ["python", "app.py"]
