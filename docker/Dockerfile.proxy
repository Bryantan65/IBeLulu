
# 3. Node.js MCP Proxy
FROM node:18-alpine

WORKDIR /app

# Copy files from mcp-proxy directory but treat it as root
COPY mcp-proxy/package.json .
COPY mcp-proxy/nodejs-proxy.js .

# Install dependencies (express, cors, node-fetch, dotenv)
RUN npm install

# Expose port
EXPOSE 3001

# Run the proxy
CMD ["node", "nodejs-proxy.js"]
