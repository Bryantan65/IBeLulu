
# 1. Frontend
FROM node:18-alpine

WORKDIR /app

# Copy package files
COPY aegis-frontend/package.json .
COPY aegis-frontend/package-lock.json .

# Install dependencies
RUN npm install

# Copy source code
COPY aegis-frontend/ .

# Expose Vite port
EXPOSE 5173

# Run Vite in host mode
CMD ["npm", "run", "dev", "--", "--host"]
